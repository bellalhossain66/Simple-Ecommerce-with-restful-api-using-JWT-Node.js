<%- include('header.ejs') %>
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Product List</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                            <li class="breadcrumb-item active">Product List</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="modal fade" id="pro-view-detail">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Product View & Updates</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-6 col-md-10">
                                    <img src="" class="w-100 img-fluid pro-view-img">
                                </div>
                                <div class="col-lg-6 col-md-10">
                                    <h5>Image Url:
                                        <input class="pro-view-img-url form-control" type="text" value="">
                                    </h5>
                                    <h5>Name:
                                        <input class="pro-view-name form-control" type="text" value="">
                                    </h5>
                                    <h5>Price-(tk):
                                        <input class="pro-view-price form-control" type="number" value="">
                                    </h5>
                                    <input type="hidden" class="pro-view-id">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-between">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary product-update-submit">Save Updates</button>
                        </div>
                    </div>

                </div>

            </div>
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">All Product</h3>
                                <div class="card-tools">
                                    <div class="input-group input-group-sm">
                                        <input type="text" name="table_search" class="form-control float-right searchProduct" placeholder="Search">
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Sn.</th>
                                            <th>Image</th>
                                            <th>Name</th>
                                            <th>Price</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="pro-list">
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <%- include('footer.ejs') %>